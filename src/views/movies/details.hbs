<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">
                <h1>{{singleMovie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{singleMovie.genre}}</p>
                        <p class="card-director">Directror:
                            {{singleMovie.director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{singleMovie.year}}</p>
                        <p class="card-ranking">
                            Rating:
                            <span id="stars"> {{singleMovie.rating}}</span>
                        </p>
                    </div>
                </div>

                <p class="disc">Description: {{singleMovie.description}}</p>
                <p class="card-category">Category: {{singleMovie.category}}</p>
                <a
                    href="/movies/attach/{{singleMovie.id}}"
                    class="details"
                >Attach Cast</a>
            </div>
        </div>
        <div class="card_right">
            <img src="{{singleMovie.imageUrl}}" alt="image" />
        </div>
    </div>
    <div class="main-cast-card">
        {{#each singleMovie.casts}}
            <div class="cast-card">
                <div class="card-img">
                    <img src="{{imageUrl}}" alt="cast" />
                </div>
                <div class="cast-info">
                    <h1>{{name}}</h1>
                    <h3>Age: {{age}}</h3>
                    <h3>Born: {{born}}</h3>
                    <h3>Name in Movie: n/a</h3>
                </div>
            </div>
        {{/each}}
    </div>
</section>