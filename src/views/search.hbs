<section id="search">
    <h1>Search</h1>
    <form action="" method="post" class="form">
        <input
            type="text"
            class="search"
            name="search"
            placeholder="Title..."
        />
        <input type="text" name="" class="genre" placeholder="Genre..." />
        <input type="number" name="" class="year" placeholder="Year..." />
        <input type="submit" value="search" />
    </form>
</section>

{{#if isFirstSearchrendering}}
    <section id="catalog">
        <h1>All Movies</h1>
        <div class="band">

            {{#each movies}}

                <div class="flip flip-vertical">
                    <div class="front">
                        <img src="{{imageUrl}}" alt="{{title}}" />
                    </div>
                    <div class="back">
                        <h1>{{title}}</h1>
                        <h2>Genre: {{genre}}</h2>
                        <p>Description: {{description}}</p>
                        <a
                            href="movies/details/{{id}}"
                            class="details"
                        >Details</a>
                    </div>
                </div>

            {{else}}
                <div class="no-posts">
                    <p class="no-offer">There are no posts yet...</p>
                </div>
            {{/each}}

        </div>
    </section>
{{else}}

    {{#each}}
        {{! TODO results from the searching  }}
    {{else}}
        <!-- If there are no posts matched display: -->
        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>
    {{/each}}
{{/if}}